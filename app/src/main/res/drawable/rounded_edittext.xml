<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo do EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Bordas arredondadas (defina o raio para ajustar a curva) -->
    <corners android:radius="12dp" />

    <!-- Bordas ao redor do EditText -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- Cor da borda -->

    <!-- Padding interno do EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>