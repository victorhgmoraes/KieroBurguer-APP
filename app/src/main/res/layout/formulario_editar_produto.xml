<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFormularioEdicao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Campo para o nome do produto -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo Nome"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNovoNome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Digite o nome"
        android:inputType="text"
        android:background="@android:drawable/editbox_background_normal"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <!-- Campo para a descrição do produto -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova descrição"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNovaDescricao"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Digite a descrição"
        android:inputType="text"
        android:background="@android:drawable/editbox_background_normal"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <!-- Campo para o preço do produto -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo preço"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNovoPreco"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Digite o preço"
        android:inputType="numberDecimal"
        android:background="@android:drawable/editbox_background_normal"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <!-- Campo para o tipo do produto -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo do Produto"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNovoTipo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Digite o tipo"
        android:inputType="text"
        android:textColor="#000000"
        android:background="@android:drawable/editbox_background_normal"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Botão para salvar as alterações -->
    <Button
        android:id="@+id/btnSalvarEdicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#9B1C1C"
        android:textColor="#FFFFFF" />

</LinearLayout>
